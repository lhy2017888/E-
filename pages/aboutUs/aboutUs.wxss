/* pages/aboutUs/aboutUs.wxss */
.aboutus-container{
  width:100%;
  height:1206rpx;
  display: flex;
  flex-direction: column;
}
.aboutus-wrap{
  flex:1;
  background-color: #fff;
  padding-top:12rpx;
}
.logo-wrap{
  height:216rpx;
  width:100%;
  padding-top:63rpx;
  text-align: center;
  color:#0054a7;
  font-size:36rpx;
}
.logo-wrap .e-logo{
  width:103rpx;
  margin-bottom:39rpx;
}
.company-profile{
  width:630rpx;
  padding:12rpx 60rpx 78rpx;
  color:#666;
  font-size:26rpx;
}
.company-profile .title{
  text-align: center;
  font-size: 36rpx;
  color:#4d4d4d;
  margin-bottom:26rpx;
}
.company-profile .content{
  line-height: 44rpx;
  text-indent: 2em;
}
.company-phone{
  width:630rpx;
  padding:12rpx 60rpx 78rpx;
  color:#4d4d4d;
  font-size:26rpx;
}
.company-phone .phone-wrap{
  display: flex;
  justify-content: space-between;
  border-bottom:1px solid #dadada;
  height: 85rpx;
  line-height: 85rpx;
}
.company-phone .phone-wrap .clo{
  color:#407cf3;
}
.compary-name{
  height:70rpx;
  line-height: 70rpx;
  font-size:24rpx;
  text-align: center;
  color:#666;
}